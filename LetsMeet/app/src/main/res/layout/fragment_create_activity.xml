<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.walter.letsmeet.CreateActivityFragment"
    android:orientation="vertical"
    android:id = "@+id/letsMeet"
    android:background="@mipmap/background">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@mipmap/header"
        android:text="@string/header_create_activity"
        android:gravity="center"
        android:textSize="35dp"/>

    <GridLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:rowCount="5"
        android:columnCount="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:text="@string/ActivityName"
            android:layout_row="0"
            android:textSize="30dp"

            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"
            android:id = "@+id/edit_name"
            android:hint="@string/hint_enter_name"
            android:background="@mipmap/box"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/ActivityLocation"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />
        box<EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:id = "@+id/edit_location"
        android:hint="@string/hint_enter_location"
        android:background="@mipmap/box"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/ActivityDate"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:id = "@+id/edit_date"
            android:hint="@string/hint_enter_date"
            android:background="@mipmap/box"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/ActivityPeople"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:id = "@+id/edit_number"
            android:hint="@string/hint_enter_number"
            android:layout_marginTop="10dp"
            android:background="@mipmap/box"/>

    </GridLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/button_create"
            android:text="@string/LetsMeet"
            android:background="@mipmap/button2"/>

        <Button android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/button_cancel"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/button_create"
            android:layout_toEndOf="@+id/button_create"
            android:layout_marginStart="85dp"
            android:text="@string/Cancel_create_activity"
            android:background="@mipmap/button2"/>

    </RelativeLayout>


</LinearLayout>
